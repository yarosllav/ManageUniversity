@model IEnumerable<Univer.Models.Group>

@{
    ViewBag.Title = "Groups";
}

<h2>Groups</h2>

<table class="table">
    <tr>
        <th>
            @Html.DisplayNameFor(model => model.Name)
        </th>
        <th></th>
    </tr>

    @foreach (var item in Model)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                <a href="@Url.Action("ShowStudents", "Students", new { id = item.GroupId })">Students</a>
            </td>
            <td>
                @Html.ActionLink("Edit", "Edit", new { id = item.GroupId }) |
                @Html.ActionLink("Delete", "Delete", new { id = item.GroupId })
            </td>
        </tr>
    }

</table>
